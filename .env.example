# REMO - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# =============================================================================
# TELEGRAM SETTINGS (REQUIRED)
# =============================================================================

# Get your bot token from @BotFather on Telegram
REMO_BOT_TOKEN=your_bot_token_here

# Get your Telegram User ID from @userinfobot on Telegram
# This is a numeric ID, NOT your username
REMO_USER_ID=123456789

# =============================================================================
# WEBHOOK SETTINGS (REQUIRED)
# =============================================================================

# Your Cloudflare Tunnel domain
# Example: botname.yourdomain.com
REMO_WEBHOOK_DOMAIN=your-domain.example.com

# Webhook port (default: 8443)
REMO_WEBHOOK_PORT=8443

# Webhook secret (optional - will be auto-generated if not provided)
# REMO_WEBHOOK_SECRET=your_random_secret

# =============================================================================
# DEVICE SETTINGS (OPTIONAL)
# =============================================================================

# Device identifier for multi-device setups
REMO_DEVICE_ID=main-laptop

# Human-readable device name
REMO_DEVICE_NAME=Main Laptop

# =============================================================================
# LOGGING SETTINGS (OPTIONAL)
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
REMO_LOG_LEVEL=INFO

# =============================================================================
# WEB DASHBOARD AUTHENTICATION (REQUIRED)
# =============================================================================

# Dashboard login username
REMO_DASHBOARD_USERNAME=admin

# Dashboard login password (use a strong password!)
# Minimum 8 characters recommended
REMO_DASHBOARD_PASSWORD=ChangeMe123!Secure

# Session secret key (auto-generated if not set)
# REMO_DASHBOARD_SECRET_KEY=your_random_secret_key_here

# Session timeout in seconds (default: 86400 = 24 hours)
# REMO_DASHBOARD_SESSION_TIMEOUT=86400
